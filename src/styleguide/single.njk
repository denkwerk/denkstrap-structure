{% macro render( element ) -%}

    <article class="sg-section" id="{{ element.name }}">

        <header class="sg-section-header">
            <h2 class="sg-h2 sg-section-title">{{ element.name }}</h2>
                
                <div class="sg-button-container">
                    
                    <button type="button" class="sg-btn btn-back" onClick="history.go(-1);return true;">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    </button>

                    <a class="sg-btn btn-expand" href="{{element.path}}" title="single view">
                        <i class="fa fa-arrows-alt" aria-hidden="true"></i>
                    </a>
                    
                    <button type="button" class="sg-btn sg-btn--source" title="view source">
                        <i class="fa fa-code" aria-hidden="true"></i>
                    </button>

                    <a class="sg-btn sg-btn--top" href="#top" title="back to top">
                        <i class="fa fa-arrow-up" aria-hidden="true"></i>
                    </a>
                </div>
        </header>
        
        <div class="sg-code">
            <div class="sg-source">
<pre class="line-numbers">
<code class="language-markup">{{ element.content | trim }}</code>
</pre>
            </div>
        </div>

        <div class="sg-doc">
            <div class="markdown-body">
                {{element.doc | safe}}
            </div>
        </div>

        <div class="sg-preview">
              {{ element.content | safe }}
        </div>

    </article>
{%- endmacro %}
