{% macro render( element ) -%}
    <article class="sg-section">

        <header class="sg-section-header" data-sticky-class="fixed">
            <a id="{{ element.name }}" class="sg-section-anchor"></a>
            
            <div class="sg-header-group">
                <div class="sg-title-container">
                    <h2 class="sg-section-title">{{ element.name }}</h2>
                </div>

                <div class="sg-button-container">
                    <button type="button" class="sg-btn sg-btn-back" title="back to styleguide" onClick="history.go(-1);return true;">                       
                        <svg viewbox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <use class="sg-icon sg-check" xlink:href="#sg-icon-arrow-left"></use>
                        </svg>
                    </button>

                    <a class="sg-btn sg-btn-expand" href="{{element.path}}" title="single view">
                        <svg viewbox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <use class="sg-icon sg-enlarge" xlink:href="#sg-icon-enlarge"></use>
                        </svg>
                    </a>
                    
                    <button type="button" class="sg-btn sg-btn-documentation" title="view documentation">
                        <svg viewbox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <use class="sg-icon sg-comment" xlink:href="#sg-icon-comment"></use>
                            <use class="sg-icon sg-close" xlink:href="#sg-icon-close"></use>
                        </svg>
                    </button>

                    <button type="button" class="sg-btn sg-btn--source" title="view source">
                        <svg viewbox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <use class="sg-icon sg-code" xlink:href="#sg-icon-code"></use>
                            <use class="sg-icon sg-close" xlink:href="#sg-icon-close"></use>
                        </svg>
                    </button>

                    <a class="sg-btn sg-btn--top" href="#top" title="back to top">
                        <svg viewbox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <use class="sg-icon sg-arrow-up" xlink:href="#sg-icon-arrow-up"></use>
                        </svg>
                    </a>
                </div>
            </div>
        </header>

        <div class="sg-documentation-container sg-toggle-container">
            <div class="sg-documentation markdown-body">
                {{element.doc | safe}}
            </div>
        </div>
        
        <div class="sg-source-container sg-toggle-container">
            <div class="sg-source">
<pre class="line-numbers">
<code class="language-markup">{{ element.content | trim }}</code>
</pre>
            </div>
        </div>

        <div class="sg-preview">
              {{ element.content | safe }}
        </div>

    </article>
{%- endmacro %}
